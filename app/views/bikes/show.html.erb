<div class="page-header">
  <%= link_to bikes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_bike_path(@bike), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show bike</h1>
</div>

<dl class="dl-horizontal">
  <dt>Kind:</dt>
  <dd><%= @bike.kind %></dd>

  <dt>Brand:</dt>
  <dd><%= @bike.brand %></dd>

  <dt>Component:</dt>
  <dd><%= @bike.component %></dd>

</dl>
